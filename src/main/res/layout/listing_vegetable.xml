<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vegetable_card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:elevation="1dp"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:background="@color/Persian_Indigo"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:padding="10dp">

            <TextView
                android:id="@+id/get_name_veg"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:text="Name:"
                android:textColor="#fff"
                android:textSize="18dp">

            </TextView>

            <TextView
                android:id="@+id/get_city_veg"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="35dp"
                android:text="City:"
                android:textColor="#FFFFFF"
                android:textSize="18dp">

            </TextView>

            <TextView
                android:id="@+id/get_state_veg"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="55dp"
                android:text="State:"
                android:textColor="#FFFFFF"
                android:textSize="18dp">

            </TextView>

            <TextView
                android:id="@+id/get_country_veg"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="80dp"
                android:text="Country:"
                android:textColor="#FFFFFF"
                android:textSize="18dp">

            </TextView>

            <TextView
                android:id="@+id/get_pincode_veg"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="110dp"
                android:text="Pincode:"
                android:textColor="#FFFFFF"
                android:paddingBottom="10dp"
                android:textSize="18dp">

            </TextView>
        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>