<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/milk_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:elevation="1dp"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardCornerRadius="2dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:background="@color/Persian_Indigo"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="30dp"
            android:padding="10dp">

            <TextView
                android:id="@+id/get_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center|left"
                android:padding="5dp"
                android:text="Name:"
                android:textColor="#fff"
                android:textSize="18dp">

            </TextView>

            <TextView
                android:id="@+id/get_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center|left"
                android:padding="5dp"
                android:text="City:"
                android:textColor="#FFFFFF"
                android:textSize="18dp">

            </TextView>

            <TextView
                android:id="@+id/get_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:gravity="center|left"
                android:padding="5dp"
                android:text="State:"
                android:textColor="#FFFFFF"
                android:textSize="18dp">

            </TextView>

            <TextView
                android:id="@+id/get_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:gravity="center|left"
                android:padding="5dp"
                android:text="Country:"
                android:textColor="#FFFFFF"
                android:textSize="18dp">

            </TextView>

            <TextView
                android:id="@+id/get_pincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:gravity="center|left"
                android:padding="5dp"
                android:text="Pincode:"
                android:textColor="#FFFFFF"
                android:textSize="18dp">

            </TextView>

            <TextView
                android:id="@+id/get_latitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:gravity="center|left"
                android:padding="5dp"
                android:text="Latitude:"
                android:textColor="#FFFFFF"
                android:textSize="18dp">

            </TextView>

            <TextView
                android:id="@+id/get_longitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="140dp"
                android:gravity="center|left"
                android:padding="5dp"
                android:text="Longitude:"
                android:textColor="#FFFFFF"
                android:textSize="18dp">

            </TextView>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
