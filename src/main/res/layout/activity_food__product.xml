<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vendor_product.Food_Product">

    <LinearLayout
        android:id="@+id/food_linear_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/food_tv"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="MENU"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/food_card_biryani"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/food_ib_biryani"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:onClick="Biryani"
                        android:src="@drawable/chicken_biryani" />

                    <TextView
                        android:id="@+id/food_tv_biryani"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Biryani"
                        android:textSize="25dp"
                        android:textStyle="normal" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/food_card_kebab"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="15dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/food_ib_kebab"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:onClick="kebab"
                        android:src="@drawable/kebab_horizontal" />

                    <TextView
                        android:id="@+id/food_tv_kebab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="kebabs"
                        android:textSize="25dp"
                        android:textStyle="normal" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/food_card_otherFood"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="15dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/food_ib_otherFood"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:onClick="OtherFoods"
                        android:src="@drawable/other_verity_food" />

                    <TextView
                        android:id="@+id/food_tv_otherFood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Other Foods"
                        android:textSize="25dp"
                        android:textStyle="normal" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </LinearLayout>
</ScrollView>